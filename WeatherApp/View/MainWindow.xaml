<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        
        <!--Adicionando três controlTemplate nos recursos para aplicar efeito "hover" nos botões da página-->
        
        <!--Close button template-->
        <ControlTemplate x:Key="CloseButtonTemplate" TargetType="Button">
            
            <!--falta configurar o tamanho do botao em si, já configurei do template aqui-->

            <Border x:Name="WindowCloseBorder">
                <fa:IconImage Icon="Close"
                              Height="4"
                              Width="25"
                              Margin="0,0,10,0"/>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="WindowCloseBorder" Property="Background" Value="Transparent"/>
                </Trigger>
            </ControlTemplate.Triggers> 
            
        </ControlTemplate>
        
    </Window.Resources>

    <Border Background="Gray"
            CornerRadius="20">

        <Grid Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="380"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--0° row) Close and minimize buttons-->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">
            
                <!--Minimize button-->
                <Button x:Name="MinimizeButton"
                        Click="MinimizeButton_Click"
                        Background="Transparent"
                        BorderThickness="0">
                    <fa:IconImage Icon="WindowMinimize"
                                  Height="4"
                                  Width="25"
                                  Margin="0,0,10,0"/>
                </Button>

                <!--Close button-->
                <Button
                        Click="CloseButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Template="{StaticResource CloseButtonTemplate}"/>

            </StackPanel>

        <!-- 1° row) Title-->
        <TextBlock Grid.Row="1" 
                   Text="WeatherApp"
                   FontSize="30"
                   FontFamily="SimSun-ExtB"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- 2° row) Display -->
        <Grid Grid.Row="2">

            <StackPanel Orientation="Vertical">

                <!--Image-->
                <Border Height="190" 
                        Width="250" 
                        Margin="20" 
                        CornerRadius="20" 
                        ClipToBounds="True">
                    <Image x:Name="WeatherImage" 
                           Stretch="UniformToFill">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="20"
                                               RadiusY="20"
                                               Rect="0,0,250,190"/>
                        </Image.Clip>
                    </Image>
                    <Border.Background>
                        <ImageBrush ImageSource="/Resources/default.jpg" 
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <!--City and timezone-->
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center">
                    <TextBlock x:Name="CityResult"
                               FontSize="12"
                               FontFamily="Corbel"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="TimezoneResult"
                               FontSize="10"
                               FontFamily="Corbel"
                               VerticalAlignment="Center"/>
                </StackPanel>
    
                <!--Description-->
                <TextBlock x:Name="DescriptionResult"
                            FontSize="12"
                            FontFamily="Corbel"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>

                <!--Other Information-->
                <StackPanel Orientation="Horizontal"
                            Height="auto"
                            Width="auto"
                            HorizontalAlignment="Center">

                    <!--Temperature-->
                    <StackPanel Orientation="Vertical">
                        <Label x:Name="labelTemp"
                           Content="Temperature"
                           FontFamily="Corbel"
                           FontSize="12"
                           FontWeight="SemiBold"/>
                        <TextBlock x:Name="TempResult"
                                   FontSize="12"
                                   FontFamily="Corbel"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!--FeelsLike-->
                    <StackPanel Orientation="Vertical">
                        <Label x:Name="labelFeelsLike"
                               Content="Feels Like"
                               FontFamily="Corbel"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                        <TextBlock x:Name="FeelsLikeResult"
                                   FontSize="12"
                                   FontFamily="Corbel"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!--Humidity-->
                    <StackPanel Orientation="Vertical">
                        <Label x:Name="labelHumidity"
                               Content="Humidity"
                               FontFamily="Corbel"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                        <TextBlock x:Name="HumidityResult"
                                   FontSize="12"
                                   FontFamily="Corbel"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!--Wind-->
                    <StackPanel Orientation="Vertical">
                        <Label x:Name="labelWind"
                               Content="Wind"
                               FontFamily="Corbel"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                        <TextBlock x:Name="WindResult"
                                   FontSize="12"
                                   FontFamily="Corbel"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                </StackPanel>

            </StackPanel>
            
        </Grid>

        <!-- 3° row) Search-->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            
            <!--Search input-->
            <Grid>
                <TextBox x:Name="SearchBox" 
                        Height="20"
                        Width="200"
                        Margin="10"
                        VerticalAlignment="Center"
                        TextChanged="SearchBox_TextChanged"/>
                <TextBlock x:Name="SearchTextBlock"
                           Text="Search..."
                           Height="20"
                           Width="200"
                           Margin="10"
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="Visible"/>
            </Grid>

            <Button x:Name="btnSearch" 
                    Height="20"
                    Width="40"
                    Content="OK"
                    Click="Button_Click"/>
        </StackPanel>

    </Grid> 
    </Border>
    

</Window>